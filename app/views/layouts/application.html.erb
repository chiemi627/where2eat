<!DOCTYPE html>
<html>
  <head>
    <title>Where2eat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
       <div class="container">
         <a class="navbar-brand" href="#">Where2Eat</a>

         <ul class="navbar-nav navbar-auto">
         <li><%= link_to "Home", root_path, class: "nav-item" %></li>
         <li class="nav-item" href="#">About</li>
         </ul>
         <ul class="navbar-nav navbar-right">
         <% if logged_in? %>
            <li><%= link_to "お店追加", eateries_path, class:"nav-item" %></li>
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
         <% else %>
            <li><%= link_to "Log in", login_path %></li>
         <% end %>
         </ul>
       </div>       
    </nav>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
